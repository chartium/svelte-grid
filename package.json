    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@svelteness/kit-docs": "^1.1.5",
    "clsx": "^2.1.1",
    "eslint": "^9.5.0",
    "eslint-plugin-svelte": "^2.41.0",
    "globals": "^15.6.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "publint": "^0.2.8",
    "shiki": "^1.9.1",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^7.14.1",
    "unplugin-icons": "^0.19.0",
    "vite": "^5.0.11"
